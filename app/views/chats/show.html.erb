<% content_for(:page) do %>
  Chat
<% end %>

<div class="flex-grow-1 chat d-flex flex-column" data-controller="chat-subscription" data-chat-subscription-chat-id-value="<%= @chat.id %>">
  <h1 class="chat-title">Chat with <%= @chat.first_user == current_user ? @chat.second_user.first_name : @chat.first_user.first_name %></h1>
  <div class="messages" data-chat-subscription-target="messages">
    <% @chat.messages.each do |message| %>
      <div class="<%= message.user == current_user ? 'message-sent' : 'message-received' %>">
        <%= render "messages/message", message: message %>
      </div>
    <% end %>
  </div>
  <%= simple_form_for [@chat, @message],
    html: { data: { action: "turbo:submit-end->chat-subscription#resetForm" }, class: "input-group" } do |f| %>
    <div class="wrapper_btn-chat">
      <%= f.input :content,
        label: false,
        placeholder: "Write your message...",
        wrapper_html: { class: "form-control" } %>
      <%= button_tag class:"btn_input_chat" do  %>
        <i class='fa-solid fa-location-arrow'></i>
      <% end %>
    </div>
  <% end %>
</div>

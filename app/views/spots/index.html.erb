<% content_for(:page) do %>
  Spots
<% end %>
<% if current_page?(root_path) %>
  <%= render "shared/homepage" %>
<% end %>

<div class="container">
  <%= render "filters" %>
  <% if @spots.empty? %>
    <div class="alert alert-warning mt-3">
      No spots found matching your filters.
    </div>
  <% end %>
  <div class="spot-cards">
    <% @spots.each do |spot| %>
      <%= render "cards", spot: %>
    <% end %>
  </div>
</div>
